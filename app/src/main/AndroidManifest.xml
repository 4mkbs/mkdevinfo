<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- System information permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Camera permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- System overlay permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Vibration permission -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Flashlight permission -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    
    <!-- Battery optimization -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- Foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Wake lock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".DevInfoApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DevInfo"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        tools:targetApi="31"
        tools:replace="android:appComponentFactory">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DevInfo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Floating overlay service -->
        <service
            android:name=".services.FloatingOverlayService"
            android:enabled="true"
            android:exported="false" />

        <!-- Battery monitor service -->
        <service
            android:name=".services.BatteryMonitorService"
            android:enabled="true"
            android:exported="false" />

        <!-- Benchmark service -->
        <service
            android:name=".services.BenchmarkService"
            android:enabled="true"
            android:exported="false" />

        <!-- Notification channels -->
        <receiver android:name=".utils.NotificationReceiver" />

    </application>

</manifest>
