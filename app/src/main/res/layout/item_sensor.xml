<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvSensorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensor Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSensorType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorResolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resolution: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorMaxRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Range: Unknown"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvSensorValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Values: No data"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
