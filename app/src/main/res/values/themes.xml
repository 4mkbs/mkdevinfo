<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.DevInfo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>
    
    <!-- Splash theme -->
    <style name="Theme.DevInfo.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.DevInfo</item>
    </style>
    
    <!-- Card style -->
    <style name="DevInfoCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Text styles -->
    <style name="DevInfoTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DevInfoSubtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <style name="DevInfoValue" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Button styles -->
    <style name="DevInfoButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Progress indicator styles -->
    <style name="DevInfoCircularProgress" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">80dp</item>
        <item name="trackThickness">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>
